<div class="user">
  <% pairings = user.pairings.where(:pair_id == current_user.id) %>

  <% if pairings.present? %>
    <div><%= link_to (image_tag user.photo_name, class: "transparent"), new_user_pairing_path(user_id: user.id) %></div>
  <% else %>
    <div><%= link_to (image_tag user.photo_name), new_user_pairing_path(user_id: user.id) %></div>
  <% end %>
  <%= user.name %>
  <% pairings.each do |pairing| %>
    <ul class="pairing">
      <li><%= pairing.pair_date.strftime("%-m/%-d/%Y") %></li>
    </ul>
  <% end %>
</div>